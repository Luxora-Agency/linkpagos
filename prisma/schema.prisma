generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  name         String
  role         Role          @default(GESTOR)
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  createdBy    String?
  paymentLinks PaymentLink[]

  @@map("users")
}

model PaymentLink {
  id             String          @id @default(cuid())
  title          String
  description    String?
  amount         Int
  amountUsd      Float?
  amountType     String          @default("CLOSE")
  currency       String          @default("COP")
  logoUrl        String?
  status         LinkStatus      @default(ACTIVE)
  expirationDate DateTime?
  callbackUrl    String?
  paymentMethods String[]        @default(["CARD", "PSE", "NEQUI", "BANCOLOMBIA_TRANSFER"])
  transactionId  String?
  paymentMethod  String?
  payerEmail     String?
  paidAt         DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  userId         String
  provider       PaymentProvider @default(BOLD)
  providerLinkId String?         @unique
  providerUrl    String?
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([provider])
  @@index([providerLinkId])
  @@map("payment_links")
}

model WebhookLog {
  id        String          @id @default(cuid())
  eventId   String          @unique
  eventType String
  paymentId String
  payload   Json
  processed Boolean         @default(false)
  createdAt DateTime        @default(now())
  provider  PaymentProvider @default(BOLD)

  @@index([paymentId])
  @@index([eventType])
  @@index([provider])
  @@map("webhook_logs")
}

enum Role {
  SUPERADMIN
  ADMIN
  GESTOR
}

enum LinkStatus {
  ACTIVE
  PROCESSING
  PAID
  EXPIRED
}

enum PaymentProvider {
  BOLD
  WOMPI
}
